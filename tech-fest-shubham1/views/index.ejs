<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

<script>
  window.addEventListener("load", () => {
    var tl = gsap.timeline();

    gsap.from(".hero-text p", {
      x: -200,
      opacity: 0,
      duration: 1.5,
      ease: "circ.out",
    });

    gsap.from(".hero-text a", {
      x: 200,
      opacity: 0,
      duration: 1.5,
      ease: "circ.out",
    });

    document
      .querySelector(".hero-text a")
      .addEventListener("mouseenter", () => {
        gsap.to(".hero-text a", {
          scale: 1.1,
          ease: "circ.out",
        });
      });

    document
      .querySelector(".hero-text a")
      .addEventListener("mouseleave", () => {
        gsap.to(".hero-text a", {
          border: 0,
          background: "#73C7C7",
          borderColor: "white",
          color: "black",
          scale: 1,
          ease: "power2.out",
        });
      });

    tl.from(".section2 .elem1", {
      x: -400,
      duration: 2,
      opacity: 0,
      scrollTrigger: {
        trigger: ".section2 .elem1",
        scroller: "body",
        start: "top 90%",
        end: "top 20%",
        scrub: 2,
      },
    });

    tl.from(".section2 .elem2", {
      x: 400,
      duration: 2,
      opacity: 0,
      scrollTrigger: {
        trigger: ".section2 .elem2",
        scroller: "body",
        start: "top 90%",
        end: "top 20%",
        scrub: 2,
      },
    });

    tl.from(".section2 .elem3", {
      x: -400,
      duration: 2,
      opacity: 0,
      scrollTrigger: {
        trigger: ".section2 .elem3",
        scroller: "body",
        start: "top 90%",
        end: "top 20%",
        scrub: 2,
      },
    });

    document.querySelectorAll(".section2 button").forEach((button) => {
      button.addEventListener("mouseenter", () => {
        gsap.to(button, {
          scale: 1.1,
          ease: "power2.out",
        });
      });

      button.addEventListener("mouseleave", () => {
        gsap.to(button, {
          border: 0,
          background: "white",
          borderColor: "white",
          scale: 1,
          ease: "power2.out",
        });
      });
    });
  });

  //Carousel

  // Carousel Logic
  const carousel = document.getElementById('carousel');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const items = document.querySelectorAll('.carousel-item');
  const totalItems = items.length;
  let currentIndex = 0;
  const visibleItems = 3; // Number of visible images

  function updateCarousel() {
    const offset = -currentIndex * (100 / visibleItems);
    carousel.style.transform = `translateX(${offset}%)`;
  }

  function nextSlide() {
    if (currentIndex >= totalItems - visibleItems) {
      currentIndex = 0;
      carousel.style.transition = 'none'; // Remove transition for seamless loop
      carousel.style.transform = `translateX(0%)`;
      setTimeout(() => {
        carousel.style.transition = 'transform 0.7s ease-in-out';
        currentIndex++;
        updateCarousel();
      }, 50);
    } else {
      currentIndex++;
      updateCarousel();
    }
  }

  function prevSlide() {
    if (currentIndex <= 0) {
      currentIndex = totalItems - visibleItems;
      carousel.style.transition = 'none';
      carousel.style.transform = `translateX(-${currentIndex * (100 / visibleItems)}%)`;
      setTimeout(() => {
        carousel.style.transition = 'transform 0.7s ease-in-out';
        currentIndex--;
        updateCarousel();
      }, 50);
    } else {
      currentIndex--;
      updateCarousel();
    }
  }

  // Event Listeners for Buttons
  nextBtn.addEventListener('click', nextSlide);
  prevBtn.addEventListener('click', prevSlide);

  // Automatic Sliding
  setInterval(nextSlide, 3000); // Slide every 3 seconds
</script>

