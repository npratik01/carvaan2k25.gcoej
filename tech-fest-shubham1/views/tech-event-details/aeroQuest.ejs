        color: #0a192f;
        background-color: #64ffda;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #52d1b2;
    }

    .buttons {
        display: flex;
        justify-content: center;
        /* Horizontally center the buttons */
